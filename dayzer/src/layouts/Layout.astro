---
import { NavigationBar } from '../components/ui/NavigationBar';

interface NavLink {
  label: string;
  href?: string;
  dropdown?: NavLink[];
  description?: string;
}

interface Props {
  title: string;
  pageTitle?: string;
  subNavLinks?: NavLink[];
}
const { title, pageTitle, subNavLinks } = Astro.props;
const currentPath = Astro.url.pathname;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/new_favicon.png" />
    <link rel="shortcut icon" href="/new_favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gs-off-white text-gs-gray-900 font-sans min-h-screen">
    <NavigationBar 
      client:load 
      currentPath={currentPath}
      pageTitle={pageTitle}
      subNavLinks={subNavLinks}
    />
    <main>
      <slot />
    </main>
  </body>
</html> 